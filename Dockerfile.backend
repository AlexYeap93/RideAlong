# Dockerfile for RideAlong Backend with JWT Support
FROM node:18-alpine

# Set working directoryr
WORKDIR /app

# Copy package files
COPY backend/package*.json ./

# Install dependencies
RUN npm install

# Copy backend source code
COPY backend/ ./

# Build TypeScript
RUN npm run build

# Expose backend port
EXPOSE 5000

# Set environment to production
ENV NODE_ENV=production

# Start the backend server
CMD ["node", "dist/index.js"]
